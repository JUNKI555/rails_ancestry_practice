<p id="notice"><%= notice %></p>

<h1>Sub Boards</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Board name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sub_boards.each do |sub_board| %>
      <tr>
        <td><%= sub_board.id %></td>
        <td><%= sub_board.board_name %></td>
        <td><%= link_to 'Show', sub_board %></td>
        <td><%= link_to 'Edit', edit_sub_board_path(sub_board) %></td>
        <td><%= link_to 'Destroy', sub_board, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sub Board', new_sub_board_path %>
