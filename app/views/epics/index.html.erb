<p id="notice"><%= notice %></p>

<h1>Epics</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Board</th>
      <th>Epic name</th>
      <th>Cost</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @epics.each do |epic| %>
      <tr>
        <td><%= epic.id %></td>
        <td><%= epic.board_id %></td>
        <td><%= epic.epic_name %></td>
        <td><%= epic.cost %></td>
        <td><%= link_to 'Show', epic %></td>
        <td><%= link_to 'Edit', edit_epic_path(epic) %></td>
        <td><%= link_to 'Destroy', epic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Epic', new_epic_path %>
