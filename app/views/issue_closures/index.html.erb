<p id="notice"><%= notice %></p>

<h1>Issue Closures</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Epic closure</th>
      <th>Issue name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @issue_closures.each do |issue_closure| %>
      <tr>
        <td><%= issue_closure.id %></td>
        <td><%= issue_closure.epic_closure_id %></td>
        <td><%= issue_closure.issue_name %></td>
        <td><%= issue_closure.description %></td>
        <td><%= link_to 'Show', issue_closure %></td>
        <td><%= link_to 'Edit', edit_issue_closure_path(issue_closure) %></td>
        <td><%= link_to 'Destroy', issue_closure, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Issue Closure', new_issue_closure_path %>
